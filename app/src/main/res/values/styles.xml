<resources>

    <!-- Base application theme. -->
    <color name="primary">#3F51B5</color>
    <color name="primary_dark">#1A237E</color>
    <color name="text_primary">#E8EAF6</color>
    <color name="accent">#7986CB</color>
    <color name="navigation_background">#E8EAF6</color>
    <color name="text_color">#202020</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="NavigationStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!-- customize the color palette -->
        <item name="android:background">@color/navigation_background</item>
    </style>


</resources>
